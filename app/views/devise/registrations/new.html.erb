  <div class="col-md-8">
    <center>
      <% if @user.avatar.attached? %>
        <%= image_tag url_for(@user.avatar), height: 100, width: 100, class: "img-circle", id: "output" %>
      <% else %>
        <%= image_tag gravatar_image_url("test@example.com", size: 100), height: 100, width: 100, class: "img-circle", id: "output" %>
      <% end %>
    </center>
      <br>
    <div class="well myform">
      <fieldset>
        <legend style="color: green;">Sign up</legend>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <% if devise_error_messages! != "" %>
              <div class="alert alert-danger">
                <%= devise_error_messages! %>
              </div>
            <% end %>

            <div class="field form-group">
              <%= f.label :username %><br />
              <%= f.text_field :username, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field form-group">
              <%= f.label "Profile Image" %><br />
              <%= f.file_field :avatar, class: "form-control", :onchange => "loadFile(event);" %>
            </div>

            <div class="field form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="field form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", :class => "btn btn-primary btn-block" %>
              <br>
              <p><span>Already have account?</span> <%= link_to "Log in", new_user_session_path %> </p>
            </div>
          <% end %>
     </fieldset>
    <!-- < render "devise/shared/links" > -->
    </div>
  </div>
<!-- </div> -->

