<!-- <h2>Edit < resource_name.to_s.humanize ></h2> -->

<!-- <div class="row"> -->
  <div class="col-md-8">
    <center>
    <% if @user.avatar.attached? %>
      <%= image_tag url_for(@user.avatar), height: 100, width: 100, class: "img-circle", id: "output" %>
    <% else %>
      <%= image_tag gravatar_image_url(current_user.email, size: 100), height: 100, width: 100, class: "img-circle", id: "output" %>
    <% end %>
  </center>
  <br>
    <div class="well myform">
      <fieldset>
        <legend style="color: green;">Edit <%= resource_name.to_s.humanize %></legend>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <% if devise_error_messages! != "" %>
            <div class="alert alert-danger">
              <%= devise_error_messages! %>
            </div>
          <% end %>

          <div class="field form-group">
            <%= f.label :username %><br />
            <%= f.text_field :username, class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field form-group">
            <%= f.label "Profile Image" %><br />
            <%= f.file_field :avatar, class: "form-control", :onchange => "loadFile(event);" %>
          </div>

          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field form-group">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="field form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Update", :class => "btn btn-info" %>
          </div>
        <% end %>

        <br>
        <!-- <h3>Cancel my account</h3> -->
        <legend style="color: red;">Cancel my account</legend>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: "btn btn-danger", method: :delete %></p>

        <%= link_to "Back", :back, class: "btn btn-warning" %>

     </fieldset>
    <!-- < render "devise/shared/links" > -->
    </div>
  </div>
<!-- </div> -->

<script type="text/javascript">
    var loadFile = function(event) {
      var image = document.getElementById('output');
      image.src = URL.createObjectURL(event.target.files[0]);
    };

    function changeName() {
      var formInput = document.getElementById('theInput').value;
      document.getElementById('newText').innerHTML = formInput;
    }
    function changeNumber() {
      var formInput = document.getElementById('number').value;
      document.getElementById('newNumber').innerHTML = formInput;
    }

    function openCity(evt, cityName) {
      var i, tabcontent, tablinks;
      tabcontent = document.getElementsByClassName("tabcontent");
      for(i=0; i<tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
      }
      tablinks = document.getElementsByClassName("tablinks");
      for(i=0; i<tablinks.length; i++) {
        tablinks[i].className = tablinks[i].className.replace(" active", "");
      }
      document.getElementById(cityName).style.display = "block";
  
      evt.currentTarget.className += " active";
  
    }
  </script>